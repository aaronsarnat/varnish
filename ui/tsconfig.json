{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "sourceMap": true,
    "types": ["react", "jest"],
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "include": [
    "./src/react-app-env.d.ts",
    "./src/lib/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.test.ts*"
  ]
}


